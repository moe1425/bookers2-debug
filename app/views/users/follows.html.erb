<h1>Follow User</h1>
<!--<div class='col-md-12 offset-md-1'>-->
  <!--<div class='row'>-->
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <p><%= image_tag user.get_profile_image, size:"50x50" %></p>
                </td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followers.count %></td>
                <td>フォロワー数: <%= user.followings.count %></td>
                <td>
                  <%= link_to 'Show', user %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
