  <% book.book_comments.each do |book_comment| %>
    <table>
      <tbody>
        <tr>
          <td>
            <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <td>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= link_to book_comment.user.name, (current_user) %>
  <% end %>
